<div class="mx-auto px-2 py-4 w-full md:w-1/3">
  <h3 class="text-center text-gray-600">
    Login to your profile
  </h3>

  <div>
    <%= form_with url: login_sessions_path, scope: :login, class: "pure-form", data: { controller: "utils--qr-code-file-scanner" }, id: "login" do |f| %>
      <%= f.label :recovery_code %>
      <%= f.text_field :recovery_code, placeholder: "Your recovery code", required: true, class: "w-full", data: { "utils--qr-code-file-scanner-target": :output } %>
      <div class="my-3">
        <div>
          <%= f.label :file, "Or QR Code image" %>
        </div>
        <%= f.file_field :file, accept: "image/png", data: { action: "change->utils--qr-code-file-scanner#fileSelected" } %>
      </div>

      <div class="mt-3">
        <%= f.submit "Login", class: "pure-button pure-button-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
