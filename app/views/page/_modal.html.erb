<div data-controller="modal">
  <%= button %>

  <div data-modal-target="content" data-action="click->modal#close" class="hidden fixed modal-container overflow-y-scroll pb-32" style="z-index: 1001">
    <div class="mx-auto mt-32 w-1/3 bg-white shadow-xl rounded border border-solid border-gray-200 p-4">
      <%= content %>
    </div>
  </div>

  <div data-modal-target="background" class="bg-gray-600 fixed hidden opacity-50" style="z-index: 1000">
  </div>
</div>