<div class="fixed top-0 left-0 right-0 bg-blue-300 px-2 py-4 pl-12">
  <div class="flex justify-between font-bold">
    <div>
      <%= link_to "Your social media", root_path, class: "text-white hover:text-gray-200 text-4xl" %>
    </div>

    <div class="text-right">
      <div data-controller="utils-drop-down" class="mr-12 relative">
        <div data-action="click->utils-drop-down#toggleOpen" class="cursor-pointer">
          <%= current_user.username %>
        </div>

        <div data-utils-drop-down-target="dropdown" class="invisible opacity-0 absolute bg-white p-4 right-0 shadow-xl" style="width: 16rem">
          <div>
            <%= link_to "Logout", logout_sessions_path, method: :delete %>
          </div>
          <div>
            <%= link_to "Account", profile_sessions_path %>
          </div>
          <div>
            <%= link_to "Settings", settings_sessions_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-16"></div>

<div class="py-4">
  <% unless current_user.recover_key_saved? %>
    <%= render "page/notifications/recovery" %>
  <% end %>
</div>